{
	"name": "frontend",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"prepare": "npm run codegen",
		"dev": "npm run codegen && vite dev",
		"build": "npm run codegen && vite build",
		"codegen": "thrift-typescript --target thrift-server --rootDir .. --sourceDir api/thrift --outDir frontend/src/lib/types/codegen api.thrift",
		"preview": "vite preview",
		"test": "npm run test:integration:once && npm run test:unit:once",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test:integration": "PWTEST_WATCH=1 playwright test",
		"test:integration:once": "playwright test",
		"test:integration:ui": "playwright test --ui",
		"test:unit": "vitest",
		"test:unit:once": "vitest --run",
		"up-deps": "npx npm-check-updates -i"
	},
	"devDependencies": {
		"@iconify-json/heroicons": "^1.2.2",
		"@internationalized/date": "^3.6.0",
		"@playwright/test": "^1.49.1",
		"@sveltejs/adapter-auto": "^3.3.1",
		"@sveltejs/adapter-node": "^5.2.11",
		"@sveltejs/adapter-static": "^3.0.6",
		"@sveltejs/kit": "^2.13.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@tailwindcss/typography": "^0.5.15",
		"@types/d3": "^7.4.3",
		"@types/eslint": "^9.6.1",
		"@types/lodash": "^4.17.13",
		"@types/node": "^22.10.2",
		"autoprefixer": "^10.4.20",
		"bits-ui": "^0.21.16",
		"cmdk-sv": "^0.0.18",
		"eslint": "^9.17.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.46.1",
		"globals": "^15.14.0",
		"postcss": "^8.4.49",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.2",
		"svelte": "^5.15.0",
		"svelte-check": "^4.1.1",
		"svelte-intersection-observer": "^1.0.0",
		"svelte-radix": "^1.1.1",
		"sveltekit-search-params": "^4.0.0-next.0",
		"tailwindcss": "^3.4.17",
		"typescript": "^5.7.2",
		"typescript-eslint": "^8.18.1",
		"unplugin-icons": "^0.22.0",
		"vite": "^6.0.5",
		"vitest": "^3.0.0-beta.2"
	},
	"type": "module",
	"dependencies": {
		"@creditkarma/thrift-server-core": "^1.0.4",
		"@creditkarma/thrift-typescript": "^3.7.6",
		"@types/echarts": "^4.9.22",
		"@types/thrift": "^0.10.17",
		"clsx": "^2.1.1",
		"d3": "^7.9.0",
		"dotenv": "^16.4.7",
		"echarts": "^5.5.1",
		"lodash": "^4.17.21",
		"tailwind-merge": "^2.5.5",
		"tailwind-variants": "^0.3.0",
		"thrift": "^0.21.0"
	},
	"overrides": {
		"cross-spawn": "^7.0.6",
		"cookie": "^0.7.0",
		"glob": "^9.0.0",
		"vite": "^6.0.5",
		"nanoid": "^3.3.8"
	},
	"optionalDependencies": {
		"@rollup/rollup-linux-x64-gnu": "^4.29.0"
	}
}
